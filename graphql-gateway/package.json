{
  "name": "graphql-gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node --test test/**/*.js",
    "test:unit": "node --test test/unit-tests/**/*.js",
    "test:coverage": "node node_modules/c8/bin/c8.js --reporter=text --reporter=html --reporter=json-summary --include='src/**' --include='server.js' -- node --test test/unit-tests/*.js",
    "test:coverage:check": "node node_modules/c8/bin/c8.js --check-coverage --statements 85 --branches 85 --functions 85 --lines 85 --include='src/**' --include='server.js' -- node --test test/unit-tests/*.js",
    "validate-schema": "node scripts/validate-schema.js",
    "check-breaking": "echo 'Breaking change detection not implemented yet'",
    "generate-schema": "node scripts/generate-schema.js"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "axios": "^1.5.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.9.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^1.1.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^14.2.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "graphql": "^16.9.0"
  }
}
